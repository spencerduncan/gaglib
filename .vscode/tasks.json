{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "${env:HOME}/.dotnet/dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/GagLib.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "command": "${env:HOME}/.dotnet/dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/GagLib.sln",
        "--no-build"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "build"
    },
    {
      "label": "watch",
      "command": "${env:HOME}/.dotnet/dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--project",
        "${workspaceFolder}/tests/GagLib.Tests/GagLib.Tests.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "clean",
      "command": "${env:HOME}/.dotnet/dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/GagLib.sln"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
